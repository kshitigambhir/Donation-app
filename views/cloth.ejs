<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cloth Donation</title>
  <style>
    /* Add or modify styles as needed */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
  }
  
  header {
    text-align: center;
    background-color: #f0f0f0;
    padding: 20px 0;
  }
  
  .cover-photo {
    max-width: 100%;
    height: auto;
  }
  
  .container {
    max-width: 600px;
    margin: 20px auto;
    padding: 0 20px;
  }
  
  form {
    margin: 0 auto;
    max-width: 500px;
    padding: 10px;
    display: flex;
    flex-direction: column;
  }
  
  label {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 10px;
  }
  
  label {
    display: block;
    margin-bottom: 5px;
  }
  
  input[type="text"],
  input[type="tel"],
  input[type="email"],
  textarea,
  select {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
  
  button {
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }
  
  button:hover {
    background-color: #45a049;
  }
  
  button:active {
    background-color: #3e8e41;
  }  
  </style>
</head>
<body>
  <header>
    <!-- Your cover photo or logo here -->
    <img src="img/cloth.jpeg" alt="Cover Photo" class="cover-photo">
    <h1>Cloth Donation</h1>
  </header>
  <div class="container">
    <form id="donationForm">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required>
      
      <label for="phone">Phone No:</label>
      <input type="tel" id="phone" name="phone" required>
      
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>
      
      <label for="address">Address:</label>
      <textarea id="address" name="address" required></textarea>
      
      <label for="gender">Gender:</label>
      <select id="gender" name="gender" required>
        <option value="">Select Gender</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
      
      <div id="clothSelection">
        <!-- Cloth selection fields will be dynamically added here -->
      </div>
      
      <button type="submit">Donate</button>
    </form>
  </div>
  <script>
    // Function to dynamically populate cloth type and size based on gender selection
function populateClothSelection(gender) {
    var clothSelectionDiv = document.getElementById('clothSelection');
    clothSelectionDiv.innerHTML = ''; // Clear previous content
    
    if (gender === 'male') {
      var clothTypes = ['Shirts', 'Trousers', 'Jackets'];
    } else if (gender === 'female') {
      var clothTypes = ['Dresses', 'Skirts', 'Blouses'];
    } else {
      // If gender is not selected, do nothing
      return;
    }
    
    var clothTypeSelect = document.createElement('select');
    clothTypeSelect.name = 'clothType';
    clothTypeSelect.required = true;
    var sizeSelect = document.createElement('select');
    sizeSelect.name = 'size';
    sizeSelect.required = true;
    
    // Populate cloth type options
    for (var i = 0; i < clothTypes.length; i++) {
      var option = document.createElement('option');
      option.value = clothTypes[i];
      option.textContent = clothTypes[i];
      clothTypeSelect.appendChild(option);
    }
    
    // Populate size options (assuming common sizes for simplicity)
    var sizes = ['S', 'M', 'L', 'XL'];
    for (var i = 0; i < sizes.length; i++) {
      var option = document.createElement('option');
      option.value = sizes[i];
      option.textContent = sizes[i];
      sizeSelect.appendChild(option);
    }
    
    // Append cloth selection fields to the clothSelectionDiv
    clothSelectionDiv.appendChild(clothTypeSelect);
    clothSelectionDiv.appendChild(sizeSelect);
  }
  
  // Event listener for gender selection change
  document.getElementById('gender').addEventListener('change', function() {
    var selectedGender = this.value;
    populateClothSelection(selectedGender);
  });
  
  // Event listener for form submission
  document.getElementById('donationForm').addEventListener('submit', function(event) {
    event.preventDefault(); // Prevent form submission
    
    // Retrieve form data
    var formData = new FormData(this);
    
    // Do something with the form data (e.g., submit it to a server)
    // For now, let's just log it to the console
    for (var pair of formData.entries()) {
      console.log(pair[0] + ': ' + pair[1]);
    }
    alert("Form Submitted Successfully - Article would be collected as Early as Possible")
    // You can also reset the form after submission if needed
    this.reset();
  });
  
  </script>
</body>
</html>
